<div class="container col-md-8 col-md-offset-2">
  <% @links.each do |link| %>
    <%= link_to(link) do %>
      <h3><%= link.title %></h3>
      <p>Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.email %>
      <hr>
    <% end %>
  <% end %>
</div>

